@using EntityLayer.Concrete;
@{ 
    ViewBag.Title = "Dashboard";
    User loginUser = Session["LoginUser"] as User;
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Dashboard</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12 col-lg-6">

        @if (loginUser.StatusId == 1)
        {
            <div class="row">
                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Number of Customers">Personel Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.TotalPersonel</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->

                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Number of Orders">İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.TotalTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Average Revenue">Devam Eden İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.TotalContinueTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->

                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Growth">Tamamlanan İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.TotalDoneTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row -->
        }
        else
        {
            <div class="row">
                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Number of Customers">İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.PersonelTotalTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->

                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Number of Orders">Bekleyen İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.PersonelTotalWaitingTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Average Revenue">Devam Eden İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.PersonelTotalContinueTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->

                <div class="col-lg-6">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-right">
                            </div>
                            <h5 class="text-muted font-weight-normal mt-0" title="Growth">Tamamlanan İş Sayısı</h5>
                            <h3 class="mt-3 mb-3">@ViewBag.PersonelTotalDoneTask</h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row -->
        }


    </div>
</div>
