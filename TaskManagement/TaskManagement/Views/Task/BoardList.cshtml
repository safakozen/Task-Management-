@model EntityLayer.TaskStatusVM
@{
    ViewBag.Title = "BoardList";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">
                İş Yönetimi
            </h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="board">
            @foreach (var task in Model.Status.Where(x => x.Id == 4))
            {
                <div class="tasks">
                    <h5 class="mt-0 task-header">@task.StatusName (@Model.Task.Where(x => x.Status.Id == 4).Count())</h5>
                    <div id="task-list-one" class="task-list-items">
                        @foreach (var item in Model.Task.Where(x => x.Status.Id == 4))
                        {
                            <div class="card mb-0">
                              
                                <div class="card-body p-3">
                                    <small class="float-right text-muted">@item.EndDate.ToString("dddd, dd MMMM yyyy")</small>
                                    <span class="badge badge-@item.UrgencyStatus.Color">
                                        @item.UrgencyStatus.Name
                                    </span>
                                    @if (item.IsPriority)
                                    {
                                        <small class="font-16"><span class="text-warning mdi mdi-star"></span></small>
                                    }
                                    <h5 class="mt-2 mb-2">
                                        <a href="#" data-toggle="modal" data-target="#task-detail-modal" class="text-body">
                                            @item.Title

                                        </a>
                                    </h5>
                                    <div class="dropdown float-right">
                                        <a href="#" class="dropdown-toggle text-muted arrow-none" data-toggle="dropdown" aria-expanded="false">
                                            <i class="mdi mdi-dots-vertical font-18"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="/Task/Edit/@item.Id" class="dropdown-item"><i class="mdi mdi-pencil mr-1"></i>Düzenle</a>
                                            <a href="/Task/ChangeStatus/@item.Id" class="dropdown-item"><i class="mdi mdi-exit-to-app mr-1"></i>İlerle</a>
                                        </div>
                                    </div>

                                    <p class="mb-0">
                                        <span class="align-middle">@item.User.Name</span>
                                    </p>
                                </div> <!-- end card-body -->
                            </div>
                        }



                    </div>
                </div>
            }
            
            @foreach (var task in Model.Status.Where(x => x.Id == 5))
