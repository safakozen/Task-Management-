@model EntityLayer.Concrete.Task
@{
    ViewBag.Title = "Yeni İş";
}






<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
            </div>
            <h4 class="page-title">Yeni İş</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Create", "Task", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <form>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="task-title">Başlık</label>
                                            <input type="text" class="form-control form-control-light" name="Title" id="Title" placeholder="Başlık">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="task-priority2">İş Durumu</label>
                                            @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control form-control-ligh" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="task-priority2">Aciliyet Durumu</label>
                                            @Html.DropDownList("UrgencyStatusId", null, htmlAttributes: new { @class = "form-control form-control-ligh" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="task-description">Açıklama</label>
                                    <textarea class="form-control form-control-light" name="TaskContent" id="TaskContent" rows="3"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="task-title">Açıklama</label>
                                            @Html.TextBoxFor(m => m.DocumentFile, new { type = "file", name = "Files" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="task-title">Personeller</label>
                                            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control form-control-ligh" })
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="task-priority">Son Tarih</label>
                                            @Html.TextBoxFor(x => x.EndDate, "{0:d MMM yyyy}", new { @type = "datetime", @class = "form-control form-control-light", @data_provide = "datepicker", @data_date_format = "d-M-yyyy" })
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="task-priority">Öncekikli</label>
                                            <br />
                                            @Html.EditorFor(model => model.IsPriority, new { @class = "custom-control-input", @id = "customCheckcolor4" })
                                        </div>
                                    </div>


                                </div>
                                <div class="text-right">
                                    <a href="/" class="btn btn-light">Geri Dön</a>
                                    <button type="submit" class="btn btn-primary">Oluştur</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
