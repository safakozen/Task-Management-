@model EntityLayer.Concrete.Task
@{
    ViewBag.Title = "İşi Düzenle";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
            </div>
            <h4 class="page-title">Yeni İş</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "Task", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <form>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="task-title">Başlık</label>
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control form-control-light", @placeholder = "Başlık" } })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="task-priority2">İş Durumu</label>
                                            @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control form-control-ligh" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="task-priority2">Aciliyet Durumu</label>
                                            @Html.DropDownList("UrgencyStatusId", null, htmlAttributes: new { @class = "form-control form-control-ligh" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="task-title">Açıklama</label>
                                            @Html.EditorFor(model => model.TaskContent, new { htmlAttributes = new { @class = "form-control form-control-light", @placeholder = "Açıklama" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="task-title">Açıklama</label>
                                            @Html.TextBoxFor(m => m.DocumentFile, new { type = "file", name = "Files" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="task-title">Dosya</label>
                                            <embed type="application/pdf" src="~/UploadedFiles/@Model.DocumentFile" class="form-control" style="height:500px" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="task-title">Personeller</label>
                                            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control form-control-ligh" })
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="task-priority">Son Tarih</label>
                                            @Html.TextBoxFor(x => x.EndDate, "{0:d MMM yyyy}", new { @type = "datetime", @class = "form-control form-control-light", @data_provide = "datepicker", @data_date_format = "d-M-yyyy" })
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="task-priority">Öncekikli</label>
                                            <br />
                                            @Html.EditorFor(model => model.IsPriority, new { @class = "custom-control-input", @id = "customCheckcolor4" })
                                        </div>
                                    </div>


                                </div>
                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary">Düzenle</button>
                                    <a href="/Task/Index" class="btn btn-light">Geri Dön</a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
